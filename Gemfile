source "https://rubygems.org"

# Chirpy 테마를 사용하기 위한 최소한의 부품 목록
gem "jekyll", "~> 4.3"
gem "jekyll-theme-chirpy" # 이 녀석이 직접 모든 레이아웃을 제공할 겁니다.

# 필수 플러그인들 (에러 방지)
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-include-cache"
  gem "jekyll-seo-tag"
  gem "jekyll-archives"
  gem "jekyll-sitemap"
end

# 윈도우 환경 대응용 (삭제하지 마세요)
gem "wdm", "~> 0.2.0", :platforms => [:mingw, :x64_mingw, :mswin]